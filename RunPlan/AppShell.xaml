<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RunPlan.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RunPlan.Model"
    
    Title="RunPlan">

    <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" Route="LoginPage"/>
   

    <TabBar>
        <Tab Title="Home" Icon="appicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        

        <Tab Title="Activity List" Icon="list.png">
            <ShellContent ContentTemplate="{DataTemplate local:ActivityList}" Route="ActivityList" />
            
        </Tab>
       
        <Tab Title="Training List" Icon="list.png">
            <ShellContent ContentTemplate="{DataTemplate local:TrainingList}" Route="TrainingList" />
        </Tab>


    </TabBar>


    <!-- Navigation-only pages -->
    <ShellContent ContentTemplate="{DataTemplate local:Activity}" Route="Activity" Shell.TabBarIsVisible="False" />
    <ShellContent ContentTemplate="{DataTemplate local:ActivityDetail}" Route="ActivityDetail" Shell.TabBarIsVisible="False"/>
    <ShellContent ContentTemplate="{DataTemplate local:CreateTraining}" Route="CreateTraining" Shell.TabBarIsVisible="False" />
    <ShellContent ContentTemplate="{DataTemplate local:TrainingDetailPage}" Route="TrainingDetail" Shell.TabBarIsVisible="False"/>

</Shell>
