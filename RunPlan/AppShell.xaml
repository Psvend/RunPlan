<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RunPlan.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RunPlan.Model"
    Shell.FlyoutBehavior="Flyout"
    Title="RunPlan">
    <TabBar>
        <Tab Title="Home" Icon="appicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Yes" Icon="appiconfg.png">
            <ShellContent ContentTemplate="{DataTemplate local:Activity}" />
        </Tab>
        <Tab Title="Empty" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate local:Stats}" />
        </Tab>
    </TabBar>

    <ShellContent
     Title="Home"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />


</Shell>
