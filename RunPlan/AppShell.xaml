<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RunPlan.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RunPlan.Model"
    
    Title="RunPlan">
    <TabBar>
        <Tab Title="Home" Icon="appicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        
        <Tab Title="Statistics" Icon="coffee.png">
            <ShellContent ContentTemplate="{DataTemplate local:Mapping}" />
        </Tab>

        <Tab Title="Activity List" Icon="list.png">
            <ShellContent ContentTemplate="{DataTemplate local:ActivityList}" Route="ActivityList" />
        </Tab>


    </TabBar>


    <!-- Navigation-only pages -->
    <ShellContent ContentTemplate="{DataTemplate local:Activity}" Route="Activity" />
    <ShellContent ContentTemplate="{DataTemplate local:ActivityDetail}" Route="ActivityDetail" />

</Shell>
