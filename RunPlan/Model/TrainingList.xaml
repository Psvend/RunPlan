<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RunPlan.Model.TrainingList"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:RunPlan.Model"
    xmlns:viewmodel="clr-namespace:RunPlan.ViewModel"
    x:DataType="viewmodel:TrainingListViewModel"
    Title="Training List"
    BackgroundColor="#8260DA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <!-- Title + Plus Button -->
            <Grid ColumnDefinitions="*,Auto"
                  Padding="10"
                  VerticalOptions="Center"
                  HorizontalOptions="FillAndExpand">
                <Label Text="Your Training Plans!"
                       FontAttributes="Bold"
                       FontSize="32"
                       TextColor="White"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                <ImageButton
                    Source="plus.png"
                    WidthRequest="75"
                    HeightRequest="75"
                    BackgroundColor="#BC54BD"
                    CornerRadius="55"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Clicked="OnAddTrainingClicked"
                    Aspect="AspectFit"
                    Grid.Column="1" />
            </Grid>


            <VerticalStackLayout Spacing="4" VerticalOptions="End">
                <Label Text="  Select Grade"
					   FontSize="12"
					   TextColor="White"
					   HorizontalOptions="Start" />

                <Border StrokeShape="RoundRectangle 25"
						BackgroundColor="#4E3689"
						Padding="0"
						StrokeThickness="0"
						Stroke="Transparent"
                        WidthRequest="130"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        
						>
                    <Grid HorizontalOptions="Center"
                          VerticalOptions="Center"
                          WidthRequest="130">
                        <Picker ItemsSource="{Binding AvailableGrades}" 
                                SelectedItem="{Binding SelectedGrade}"
                                HeightRequest="50"
                                BackgroundColor="#4E3689"
                                TextColor="White"
                                TitleColor="White"
                                FontAttributes="Bold"
                                WidthRequest="120" />
                    </Grid>

                </Border>
            </VerticalStackLayout>



          

            <Label Text="List Of Training Plans"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Start"
	               Margin="0,20,0,0"
	               />

            <!-- Search -->
            <Border StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    Padding="0"
                    StrokeThickness="0"
                    Stroke="Transparent"
                    Margin="0,10,0,5">
                <SearchBar Placeholder="Search training plan..."
                           Text="{Binding SearchQuery}"
                           BackgroundColor="Transparent"
                           TextColor="MediumPurple"
                           CancelButtonColor="MediumPurple" />
            </Border>

            <!-- Empty Text -->
            <Label Text="No training plans found  create one!"
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsEmpty}" />



            <!-- Training List -->
            <CollectionView ItemsSource="{Binding Trainings}"
                Margin="0,0,0,10"
                SelectionChanged="OnTrainingSelected"
                SelectionMode="Single">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Training">
                        <Border StrokeShape="RoundRectangle 10"
                    Padding="15"
                    BackgroundColor="#4E3689"
                    Stroke="MediumPurple"
                    Margin="0,3">

                            <!-- ðŸ‘‡ Remove selection visual by keeping colors static -->
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#4E3689" />
                                            <Setter Property="Stroke" Value="MediumPurple" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Grid ColumnDefinitions="*,Auto"
                      RowDefinitions="Auto,Auto"
                      RowSpacing="20">
                                <StackLayout Grid.Column="0" Grid.RowSpan="2">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="White" />
                                    <Label Text="{Binding Description}" TextColor="White" />
                                    <Label Text="{Binding Time, StringFormat='Time: {0} min'}" TextColor="White" />
                                    <Label Text="{Binding Grade, StringFormat='Grade: {0}'}" TextColor="White" />
                                </StackLayout>

                                <ImageButton
                        Source="bin.png"
                        Grid.Column="1"
                        Grid.Row="0"
                        WidthRequest="60"
                        HeightRequest="60"
                        BackgroundColor="Transparent"
                        VerticalOptions="Start"
                        Aspect="AspectFit"
                        Clicked="OnDeleteTrainingClicked"
                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
