<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RunPlan.Model.TrainingList"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:RunPlan.Model"
    xmlns:viewmodel="clr-namespace:RunPlan.ViewModel"
    x:DataType="viewmodel:TrainingListViewModel"
    Title="Training List"
    BackgroundColor="#8260DA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <!-- Title + Plus Button -->
            <Grid ColumnDefinitions="*,Auto"
                  Padding="10"
                  VerticalOptions="Center"
                  HorizontalOptions="FillAndExpand">
                <Label Text="Your Trainings!"
                       FontAttributes="Bold"
                       FontSize="32"
                       TextColor="White"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                <ImageButton
                    Source="plus.png"
                    WidthRequest="75"
                    HeightRequest="75"
                    BackgroundColor="#BC54BD"
                    CornerRadius="55"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Clicked="OnAddTrainingClicked"
                    Aspect="AspectFit"
                    Grid.Column="1" />
            </Grid>

            <!-- Search -->
            <Border StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    Padding="0"
                    StrokeThickness="0"
                    Stroke="Transparent"
                    Margin="0,10,0,5">
                <SearchBar Placeholder="Search training..."
                           Text="{Binding SearchQuery}"
                           BackgroundColor="Transparent"
                           TextColor="MediumPurple"
                           CancelButtonColor="MediumPurple" />
            </Border>

            <!-- Empty Text -->
            <Label Text="No trainings found  create one!"
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsEmpty}" />

            <!-- Training List -->
            <CollectionView ItemsSource="{Binding Trainings}"
                            Margin="0,0,0,20"
                            SelectionChanged="OnTrainingSelected"
                            SelectionMode="Single">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Training">
                        <Border StrokeShape="RoundRectangle 10"
                                Padding="15"
                                BackgroundColor="#4E3689"
                                Stroke="MediumPurple"
                                Margin="0,6">
                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto"
                                  RowSpacing="10">
                                <StackLayout Grid.Column="0" Grid.RowSpan="2">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="White" />
                                    <Label Text="{Binding Description}" TextColor="White" />
                                    <Label Text="{Binding Time, StringFormat='Time: {0} min'}" TextColor="White" />
                                    <Label Text="{Binding Grade, StringFormat='Grade: {0}'}" TextColor="White" />
                                </StackLayout>

                                <ImageButton
                                    Source="bin.png"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Start"
                                    Aspect="AspectFit"
                                    Clicked="OnDeleteTrainingClicked"
                                    CommandParameter="{Binding .}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
