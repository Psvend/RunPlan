<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RunPlan.Model.ActivityList"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:RunPlan.Model"
    xmlns:viewmodel="clr-namespace:RunPlan.ViewModel"
    x:DataType="viewmodel:ActivityListViewModel"
    Title="Activity List"
    BackgroundColor="#8260DA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

			<Grid ColumnDefinitions="*, Auto"
				  Padding="10"
				  VerticalOptions="Center"
				  HorizontalOptions="FillAndExpand">
				<Label Text="Your Runs!"
					   FontAttributes="Bold"
					   FontSize="32"
					   TextColor="White"
					   VerticalOptions="Center"
					   Grid.Column="0" />
				<ImageButton
					Source="plus.png"
					WidthRequest="75"
					HeightRequest="75"
					BackgroundColor="#BC54BD"
					CornerRadius="55"
					HorizontalOptions="End"
					VerticalOptions="Center"
					Clicked="OnAddActivityClicked"
					Aspect="AspectFit"
					Grid.Column="1" />
			</Grid>



            <ScrollView Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never"
                        Padding="3,3,3,0">

                <HorizontalStackLayout Spacing="4"
                           VerticalOptions="Center"
                           HorizontalOptions="Start">

                    <!-- This Week Button -->
                    <VerticalStackLayout Spacing="2" VerticalOptions="End" WidthRequest="110" Margin="0,0,5,0">
                        <Label Text="" HeightRequest="16" />
                        <Button Text="This Week"
                                Command="{Binding FilterThisWeekCommand}"
                                BackgroundColor="#4E3689"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="25" />
                    </VerticalStackLayout>

                    <!-- Month Picker -->
                    <VerticalStackLayout Spacing="2" VerticalOptions="End">
                        <Label Text="  Select Month"
                               FontSize="12"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Border StrokeShape="RoundRectangle 25"
                                StrokeThickness="0"
                                Stroke="Transparent"
                                HorizontalOptions="Center"
                                BackgroundColor="#4E3689"
                                HeightRequest="50"
                                WidthRequest="140"
                                Padding="0">
                            <Picker ItemsSource="{Binding AvailableMonths}"
                                    SelectedItem="{Binding SelectedMonth}"
                                    HeightRequest="50"
                                    BackgroundColor="#4E3689"
                                    TextColor="White"
                                    HorizontalOptions="Center"
                                    TitleColor="White"
                                    FontAttributes="Bold" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Year Picker -->
                    <VerticalStackLayout Spacing="2" VerticalOptions="End">
                        <Label Text="  Select Year"
                               FontSize="12"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Border StrokeShape="RoundRectangle 25"
                                BackgroundColor="#4E3689"
                                Padding="0"
                                StrokeThickness="0"
                                HeightRequest="50"
                                WidthRequest="100"
                                HorizontalOptions="Center"
                                Stroke="Transparent">
                            <Picker ItemsSource="{Binding AvailableYears}"
                                    SelectedItem="{Binding SelectedYear}"
                                    HeightRequest="50"
                                    BackgroundColor="#4E3689"
                                    HorizontalOptions="Center"
                                    TextColor="White"
                                    TitleColor="White"
                                    FontAttributes="Bold" />
                        </Border>
                    </VerticalStackLayout>

                </HorizontalStackLayout>
            </ScrollView>




            <Label Text="List Of Activities"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Start"
				   Margin="0,20,0,0"
				   />

			<Border StrokeShape="RoundRectangle 20"
					BackgroundColor="White"
					Padding="0"
					StrokeThickness="0"
					Stroke="Transparent"
					Margin="0,0,0,6">
				<SearchBar Placeholder="Search activities..."
						   Text="{Binding SearchQuery, Mode=TwoWay}"
						   TextChanged="OnSearchTextChanged"
						   BackgroundColor="Transparent"
						   TextColor="MediumPurple"
						   CancelButtonColor="MediumPurple" />
			</Border>

			
			<Label Text="Empty for now – go run!"
                   TextColor="White"
                   HorizontalOptions="Center"
                   FontSize="16"
                   IsVisible="{Binding IsEmptyMessageVisible}" />


			<CollectionView ItemsSource="{Binding RunningActivities}"
                            Margin="0,0,0,40"
                            SelectionChanged="OnActivitySelected"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:RunningActivity">
                        <Border StrokeShape="RoundRectangle 10"
                                Padding="15"
                                BackgroundColor="#4E3689"
                                Stroke="MediumPurple"
                                Margin="0,3">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command= "{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ActivityListViewModel}},x:DataType=viewmodel ActivityListViewModel, Path=GoToDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto"
                                  RowSpacing="20">
                                <StackLayout Grid.Column="0" Grid.RowSpan="2" Padding="0">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="White" />
                                    <Label Text="{Binding Distance, StringFormat='Distance: {0} km'}" TextColor="White" />
                                    <Label Text="{Binding Time, StringFormat='Time: {0}'}" TextColor="White" />
                                    <Label Text="{Binding Date, StringFormat='Date: {0}'}" TextColor="White"  />
                                </StackLayout>

                                <ImageButton 
                                    Source ="bin.png"    
									Grid.Column="1"
                                    Grid.Row="0"
									WidthRequest="60"
                                    HeightRequest="60"
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ActivityListViewModel}}, Path=DeleteActivityCommand}"
                                    CommandParameter="{Binding}"
                                    VerticalOptions="Start"
									Aspect="AspectFit"
                                        />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

			
			

		</VerticalStackLayout>
    </ScrollView>
</ContentPage>


