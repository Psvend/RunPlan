<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RunPlan.Model.ActivityList"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:RunPlan.Data"
    xmlns:viewmodel="clr-namespace:RunPlan.ViewModel"
    x:DataType="viewmodel:ActivityListViewModel"
    Title="Activity List"
    BackgroundColor="#8260DA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">


			<Button Text="Add Activity"
                    Clicked="OnAddActivityClicked"
                    BackgroundColor="MediumPurple"
                    TextColor="White"
                    CornerRadius="10"
                    HorizontalOptions="Fill" />


			<HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
				<Button Text="This Week" Command="{Binding FilterThisWeekCommand}" />
				<Picker Title="Select Month"
                        ItemsSource="{Binding AvailableMonths}"
                        SelectedItem="{Binding SelectedMonth}"
                        WidthRequest="140"
                        BackgroundColor="White"
                        TextColor="Black" />
				<Picker Title="Select Year"
                        ItemsSource="{Binding AvailableYears}"
                        SelectedItem="{Binding SelectedYear}"
                        TextColor="White"
                        TitleColor="White"
                        BackgroundColor="#4E3689"
                        Margin="0,10" />
			</HorizontalStackLayout>

			
            <Label Text="List Of Activities"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Start" />

			<SearchBar Placeholder="Search activities..."
                   Text="{Binding SearchQuery, Mode=TwoWay}"
                   TextChanged="OnSearchTextChanged"
                   BackgroundColor="White"
                   TextColor="Black"
                   Margin="0,10,0,0" />


			<Label Text="Empty for now – go run!"
                   TextColor="White"
                   HorizontalOptions="Center"
                   FontSize="16"
                   IsVisible="{Binding IsEmptyMessageVisible}" />


			<CollectionView ItemsSource="{Binding RunningActivities}"
                            Margin="0,0,0,20"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:RunningActivity">
                        <Border StrokeShape="RoundRectangle 10"
                                Padding="15"
                                BackgroundColor="#4E3689"
                                Stroke="MediumPurple"
                                Margin="0,6">
                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto"
                                  RowSpacing="10">
                                <StackLayout Grid.Column="0" Grid.RowSpan="2">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                                    <Label Text="{Binding Distance, StringFormat='Distance: {0} km'}" />
                                    <Label Text="{Binding Time, StringFormat='Time: {0}'}" />
                                    <Label Text="{Binding Date, StringFormat='Date: {0}'}" />
                                </StackLayout>

                                <Button Text="Delete"
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        BackgroundColor="Transparent"
                                        TextColor="Red"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ActivityListViewModel}}, Path=DeleteActivityCommand}"
                                        CommandParameter="{Binding}"
                                        VerticalOptions="Start"
                                        FontSize="14" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



		</VerticalStackLayout>
    </ScrollView>
</ContentPage>
