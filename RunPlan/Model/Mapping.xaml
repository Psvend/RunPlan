<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model ="clr-namespace:RunPlan.Data"
             xmlns:viewmodel ="clr-namespace:RunPlan.ViewModel"
             x:DataType="viewmodel:MappingViewModel"
             x:Class="RunPlan.Model.Mapping"
             Title="Mapping">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Label Text="ðŸƒ Live Run Tracker"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <!-- Start / Stop Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Start" 
                        Command="{Binding StartTrackingCommand}" 
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="10"
                        WidthRequest="120"/>
                <Button Text="Stop" 
                        Command="{Binding StopTrackingCommand}" 
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="10"
                        WidthRequest="120"/>
            </HorizontalStackLayout>

            <!-- Distance Display -->
            <Label Text="ðŸ“ Distance"
                   FontSize="18"
                   FontAttributes="Bold"/>
            <Label Text="{Binding FormattedTotalDistance}"
                   FontSize="22"
                   TextColor="DarkBlue"
                   HorizontalOptions="Center"/>

            <!-- Timer Display -->
            <Label Text="â± Time Elapsed"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            <Label Text="{Binding ElapsedTimeFormatted}"
                   FontSize="22"
                   TextColor="DarkBlue"
                   HorizontalOptions="Center"/>

            <!-- Route Drawing Area -->
            <Label Text="ðŸ—º Route Map"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            <GraphicsView x:Name="RouteGraphicsView"
                          Drawable="{Binding RouteDrawable}"
                          HeightRequest="300"
                          WidthRequest="300"
                          BackgroundColor="LightGray"
                          HorizontalOptions="Center"
                          Margin="0,0,0,10"/>

            <!-- Recent Activities -->
            <Label Text="ðŸ“Œ Recent Activities"
                   FontSize="18"
                   FontAttributes="Bold"/>
            <CollectionView x:Name="Activies"
                            HeightRequest="150">
                <CollectionView.EmptyView>
                    <Label Text="No activities yet."
                           HorizontalOptions="Center"
                           TextColor="Gray"
                           Margin="10"/>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="#f4f4f4" CornerRadius="8">
                            <HorizontalStackLayout>
                                <Label Text="{Binding TotalDistance}"
                                       FontSize="Medium"
                                       FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>