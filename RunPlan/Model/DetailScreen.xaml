<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:RunPlan.ViewModel"
             x:DataType="viewmodel:DetailViewModel"
             x:Class="RunPlan.Model.DetailScreen"
             Title="{Binding RunningActivity.Name}">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*">
            <Label Style="{StaticResource LargeLabel}"
                   Grid.Row="1"
                   FontAttributes="Bold"
                   Text="{Binding RunningActivity.Name}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,8"/>

            <VerticalStackLayout Grid.Row="2" Padding="10" Spacing="10">

                <Label Style="{StaticResource MediumLabel}" Text="{Binding RunningActivity.Date}" />
                <Label Style="{StaticResource SmallLabel}" Text="{Binding RunningActivity.Distance, StringFormat='Distance: {0}'}" />
                <Label Style="{StaticResource SmallLabel}" Text="{Binding RunningActivity.Time, StringFormat='Time: {0}'}" />
            </VerticalStackLayout>


        </Grid>
    </ScrollView>
</ContentPage>