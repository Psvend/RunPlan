<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RunPlan.Model.TrainingDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:RunPlan.ViewModel"
    xmlns:converters="clr-namespace:RunPlan.Converters"
    x:DataType="viewmodel:TrainingListDetailViewModel"
    xmlns:model="clr-namespace:RunPlan.Model"
    Title="Training Detail"
    BackgroundColor="#8260DA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Top buttons: Back + Edit + Save -->
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" Padding="-10,0,-20,10" ColumnSpacing="10">
                <!-- Back Button -->
                <ImageButton Source="back.png"
                             Clicked="OnBackClicked"
                             BackgroundColor="Transparent"
                             HeightRequest="30"
                             WidthRequest="30"
                             HorizontalOptions="Start"
                             Grid.Column="0" />

                <!-- Empty spacer (so edit/save align to right) -->
                <Label Grid.Column="1" />

                <!-- Edit Button -->
                <ImageButton Source="edit.png"
                             Command="{Binding EditCommand}"
                             BackgroundColor="Transparent"
                             HeightRequest="30"
                             WidthRequest="30"
                             HorizontalOptions="End"
                             Grid.Column="1" />

                <!-- Save Button (only visible when editing) -->
                <Button Text="Save"
                        FontSize="14"
                        BackgroundColor="White"
                        TextColor="MediumPurple"
                        CornerRadius="10"
                        Command="{Binding SaveCommand}"
                        IsVisible="{Binding IsEditing}"
                        HeightRequest="30"
                        WidthRequest="70"
                        HorizontalOptions="End"
                        Grid.Column="2" />
            </Grid>

            <!-- Title -->
            <Label Text="{Binding Training.Name}"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Info grid (2x2 box) -->
            <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10" HorizontalOptions="Center">

                <!-- Distance Box -->
                <Border Grid.Row="0" Grid.Column="0"
                        BackgroundColor="#4E3689"
                        Stroke="#4E3689"
                        StrokeShape="RoundRectangle 12"
                        HeightRequest="150"
                        WidthRequest="180"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="0">
                    <Grid VerticalOptions="Center" HorizontalOptions="Center">

                        <!-- View Mode -->
                        <VerticalStackLayout Spacing="0" HorizontalOptions="Center"
                             IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}">
                            <Label Text="{Binding Training.Distance}"
                                   FontSize="36"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="km"
                                   FontSize="18"
                                   TextColor="White"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <!-- Edit Mode -->
                        <VerticalStackLayout IsVisible="{Binding IsEditing}" Spacing="0" HorizontalOptions="Center">
                            <Entry Text="{Binding EditableDistance, Mode=TwoWay}"
                                   FontSize="36"
                                   Keyboard="Numeric"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center"
                                   WidthRequest="100"
                                   BackgroundColor="Transparent"
                                   FontAttributes="Bold" />
                            <Label Text="km"
                                   FontSize="18"
                                   TextColor="White"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                    </Grid>
                </Border>


                <!-- Grade Box -->
                <Border Grid.Row="0" Grid.Column="1"
                        BackgroundColor="#4E3689"
                        Stroke="#4E3689"
                        StrokeShape="RoundRectangle 12"
                        HeightRequest="150"
                        WidthRequest="180"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="0">
                    <Grid VerticalOptions="Center" HorizontalOptions="Center">
                        <!-- View Mode -->
                        <Label Text="{Binding Training.Grade}"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}" />

                        <!-- Edit Mode -->
                        <VerticalStackLayout IsVisible="{Binding IsEditing}" Spacing="4" HorizontalOptions="Center">
                            <Picker ItemsSource="{Binding Difficulties}"
                                    SelectedItem="{Binding SelectedGrade}"
                                    FontSize="28"
                                    BackgroundColor="#4E3689"
                                    WidthRequest="130"
                                    TextColor="White" />
                            <Label Text="Grade"
                                   FontSize="18"
                                   TextColor="White"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>

            <!-- Training fields -->
            <CollectionView ItemsSource="{Binding TrainingFields}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:TrainingField">
                        <Border Stroke="#5E3DAC"
                                BackgroundColor="#5E3DAC"
                                StrokeShape="RoundRectangle 10"
                                Margin="5"
                                WidthRequest="250"
                                Padding="14">
                            <Label Text="{Binding Text}" 
                                   TextColor="White" 
                                   FontSize="16" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"/>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>






            <!-- Description -->
            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 15"
                    WidthRequest="390"
                    Padding="20"
                    VerticalOptions="Start">
                <VerticalStackLayout Spacing="10">

                    <!-- View Mode (Label) -->
                    <Label Text="{Binding Training.Description}"
                           TextColor="#4E3689"
                           FontSize="16"
                           LineBreakMode="WordWrap"
                           VerticalOptions="Start"
                           IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}" />

                    <!-- Edit Mode (Editor) -->
                    <Editor Text="{Binding Training.Description, Mode=TwoWay}"
                            TextColor="#4E3689"
                            FontSize="16"
                            IsVisible="{Binding IsEditing}"
                            AutoSize="TextChanges"
                            HeightRequest="100"
                            BackgroundColor="Transparent"
                            VerticalOptions="Start" />

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>