<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RunPlan.Model.TrainingDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:RunPlan.ViewModel"
    xmlns:converters="clr-namespace:RunPlan.Converters"
    x:DataType="viewmodel:TrainingListDetailViewModel"
    xmlns:model="clr-namespace:RunPlan.Model"
    Title="Training Detail"
    BackgroundColor="#8260DA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Top buttons: Back + Edit + Save -->
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" Padding="-10,0,-20,10" ColumnSpacing="10">
                <!-- Back Button -->
                <ImageButton Source="back.png"
                             Clicked="OnBackClicked"
                             BackgroundColor="Transparent"
                             HeightRequest="30"
                             WidthRequest="30"
                             HorizontalOptions="Start"
                             Grid.Column="0" />

                <!-- Empty spacer (so edit/save align to right) -->
                <Label Grid.Column="1" />

                <!-- Edit Button -->
                <ImageButton Source="edit.png"
                             Command="{Binding EditCommand}"
                             BackgroundColor="Transparent"
                             HeightRequest="30"
                             WidthRequest="30"
                             HorizontalOptions="End"
                             Grid.Column="1" />

                <!-- Save Button (only visible when editing) -->
                <Button Text="Save"
                        FontSize="14"
                        BackgroundColor="White"
                        TextColor="MediumPurple"
                        CornerRadius="10"
                        Command="{Binding SaveCommand}"
                        IsVisible="{Binding IsEditing}"
                        HeightRequest="30"
                        WidthRequest="70"
                        HorizontalOptions="End"
                        Grid.Column="2" />
            </Grid>

            <!-- Title -->
            <Label Text="{Binding Training.Name}"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Info grid (2x2 box) -->
            <Grid ColumnDefinitions="Auto,Auto" 
                  RowDefinitions="Auto, Auto" 
                  ColumnSpacing="5" 
                  RowSpacing="5" 
                  HorizontalOptions="Center">

                <!-- Distance Box -->
                <Border Grid.Row="0" Grid.Column="0"
                        BackgroundColor="#4E3689"
                        Stroke="#4E3689"
                        StrokeShape="RoundRectangle 12"
                        HeightRequest="150"
                        WidthRequest="170"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="0">
                    <Grid VerticalOptions="Center" HorizontalOptions="Center">

                        <!-- View Mode -->
                        <VerticalStackLayout Spacing="0" HorizontalOptions="Center"
                             IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}">
                            <Label Text="{Binding Training.Distance}"
                                   FontSize="36"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="km"
                                   FontSize="18"
                                   TextColor="White"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <!-- Edit Mode -->
                        <VerticalStackLayout IsVisible="{Binding IsEditing}" Spacing="0" HorizontalOptions="Center">
                            <Entry Text="{Binding EditableDistance, Mode=TwoWay}"
                                   FontSize="36"
                                   Keyboard="Numeric"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center"
                                   WidthRequest="100"
                                   BackgroundColor="Transparent"
                                    />
                            <Label Text="km"
                                   FontSize="18"
                                   TextColor="White"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                    </Grid>
                </Border>


                <!-- Grade Box -->
                <Border Grid.Row="0" Grid.Column="1"
                        BackgroundColor="#4E3689"
                        Stroke="#4E3689"
                        StrokeShape="RoundRectangle 12"
                        HeightRequest="150"
                        WidthRequest="170"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="0">
                    <Grid VerticalOptions="Center" HorizontalOptions="Center">
                        <!-- View Mode -->
                        <Label Text="{Binding Training.Grade}"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}" />

                        <!-- Edit Mode -->
                        <VerticalStackLayout IsVisible="{Binding IsEditing}" Spacing="4" HorizontalOptions="Center">
                            <Picker ItemsSource="{Binding Difficulties}"
                                    SelectedItem="{Binding SelectedGrade}"
                                    FontSize="28"
                                    BackgroundColor="#4E3689"
                                    WidthRequest="130"
                                    TextColor="White" />
                            <Label Text="Grade"
                                   FontSize="18"
                                   TextColor="White"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Time -->
                <Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       BackgroundColor="#4E3689"
                       CornerRadius="12"
                       BorderColor="#4E3689"
                       HeightRequest="150"
                       WidthRequest="260"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Padding="0"
                       HasShadow="False">

                    <Grid VerticalOptions="Center" HorizontalOptions="Center">

                        <!-- View Mode -->
                        <Label HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               TextColor="White"
                               IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Training.Time}" FontSize="36" FontAttributes="Bold" TextColor="White" />
                                    <Span Text=" min" FontSize="18" TextColor="White" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <!-- Edit Mode -->
                        <VerticalStackLayout IsVisible="{Binding IsEditing}" Spacing="8" HorizontalOptions="Center">
                            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

                                <VerticalStackLayout Spacing="2">
                                    <Picker ItemsSource="{Binding HourOptions}"
                                            SelectedItem="{Binding SelectedHour}"
                                            WidthRequest="50"
                                            TextColor="White"
                                            FontSize="36"
                                            BackgroundColor="Transparent" />
                                    <Label Text="hh" FontSize="18" TextColor="White" HorizontalOptions="Center"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="2">
                                    <Picker ItemsSource="{Binding MinuteOptions}"
                                            SelectedItem="{Binding SelectedMinute}"
                                            WidthRequest="50"
                                            TextColor="White"
                                            FontSize="36"
                                            BackgroundColor="Transparent" />
                                    <Label Text="mm" FontSize="18" TextColor="White" HorizontalOptions="Center"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="2">
                                    <Picker ItemsSource="{Binding SecondOptions}"
                                            SelectedItem="{Binding SelectedSecond}"
                                            WidthRequest="50"
                                            TextColor="White"
                                            FontSize="36"
                                            BackgroundColor="Transparent" />
                                    <Label Text="ss" FontSize="18" TextColor="White" HorizontalOptions="Center"/>
                                </VerticalStackLayout>

                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </Grid>
                </Frame>


            </Grid>

            
            <!-- Training fields -->
            <CollectionView ItemsSource="{Binding TrainingFields}"
                            ItemsLayout="VerticalList"
                            HorizontalOptions="Center">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:TrainingField">
                        <Grid WidthRequest="260" HeightRequest="45" Margin="0,0,0,5">

                            <!-- Edit Mode -->
                            <Frame BackgroundColor="White"
                                   CornerRadius="8"
                                   Padding="10,0,40,0"
                                   HasShadow="False"
                                   HeightRequest="45"
                                   IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TrainingListDetailViewModel}}, Path=IsEditing}">
                                <Entry Text="{Binding Text, Mode=TwoWay}"
                                       Placeholder="Write your training section here"
                                       TextColor="#4E3689"
                                       BackgroundColor="Transparent"
                                       FontSize="16"
                                       VerticalTextAlignment="Center"
                                       HeightRequest="45"/>
                            </Frame>

                            <!-- View Mode -->
                            <Frame BackgroundColor="#5E3DAC"
                                   CornerRadius="10"
                                   Padding="10,0"
                                   HasShadow="True"
                                   HeightRequest="45"
                                   BorderColor="Transparent"
                                   IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TrainingListDetailViewModel}}, Path=IsEditing, Converter={StaticResource InverseBoolConverter}}">
                                <Label Text="{Binding Text}"
                                       TextColor="White"
                                       FontSize="16"
                                       VerticalTextAlignment="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Delete button only in edit mode -->
                            <ImageButton Source="bin2.png"
                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TrainingListDetailViewModel}}, Path=DeleteFieldCommand}"
                                         CommandParameter="{Binding .}"
                                         BackgroundColor="Transparent"
                                         HeightRequest="20"
                                         WidthRequest="20"
                                         Margin="0,0,10,0"
                                         HorizontalOptions="End"
                                         VerticalOptions="Center"
                                         Padding="0"
                                         Aspect="AspectFit"
                                         Scale="0.8"
                                         IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TrainingListDetailViewModel}}, Path=IsEditing}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- âœ… Add Field Button -->
            <Button Text="Add Section"
                        Command="{Binding AddFieldCommand}"
                        BackgroundColor="White"
                        TextColor="MediumPurple"
                        CornerRadius="12"
                        WidthRequest="150"
                        Margin="0,10,0,30"
                        HorizontalOptions="Center"
                        IsVisible="{Binding IsEditing}" />




            <!-- Description -->
            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 15"
                    WidthRequest="340"
                    Padding="20"
                    VerticalOptions="Start">
                <VerticalStackLayout Spacing="10">

                    <!-- View Mode (Label) -->
                    <Label Text="{Binding Training.Description}"
                           TextColor="#4E3689"
                           FontSize="16"
                           LineBreakMode="WordWrap"
                           VerticalOptions="Start"
                           IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}" />

                    <!-- Edit Mode (Editor) -->
                    <Editor Text="{Binding Training.Description, Mode=TwoWay}"
                            TextColor="#4E3689"
                            FontSize="16"
                            IsVisible="{Binding IsEditing}"
                            AutoSize="TextChanges"
                            HeightRequest="100"
                            BackgroundColor="Transparent"
                            VerticalOptions="Start" />

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>