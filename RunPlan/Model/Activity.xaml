<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model ="clr-namespace:RunPlan.Data"
             xmlns:viewmodel ="clr-namespace:RunPlan.ViewModel"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
              ios:Page.UseSafeArea="True"
             x:DataType="viewmodel:ActivityViewModel"
             x:Class="RunPlan.Model.Activity"
             BackgroundColor="#8260DA">
             
             


    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">
            <!-- Back Button -->
            <ImageButton Source="back.png"
		                 Clicked="OnBackClicked"
		                 BackgroundColor="Transparent"
		                 HorizontalOptions="Start"
		                 HeightRequest="30"
                         WidthRequest="30"    
		                 Padding="0,0,0,10"/>
            <!-- Title -->
            <Entry Text="{Binding ActivityName}" 
               Placeholder="Activity Title"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               TextColor="Black" />

            <!-- Grid for Distance / Time / Pace / Intensity -->
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="30" RowSpacing="20">

                <!-- Distance -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                    <Entry Text="{Binding DistanceText}" FontSize="22" HorizontalOptions="Center" BackgroundColor="#F0F0F0"/>
                    <Label Text="Distance (km)" FontSize="14" TextColor="Black" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Time -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                    <Entry Text="{Binding Time}" FontSize="22" HorizontalOptions="Center" BackgroundColor="#F0F0F0"/>
                    <Label Text="Time (hh:mm:ss)" FontSize="14" TextColor="Black" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Pace -->
                <VerticalStackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
                    <Entry Text="{Binding Date}" FontSize="22" HorizontalOptions="Center" BackgroundColor="#F0F0F0"/>
                    <Label Text="Date (yyyy-MM-dd)" FontSize="14" TextColor="Black" HorizontalOptions="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Center">
                    <Picker Title ="Diffeculties"
                            ItemsSource="{Binding diffeculties}"
                            SelectedItem="{Binding SelectedDiffeculty}"
                            TitleColor="Gray"
                            TextColor="Black"
                            BackgroundColor="White"
                            FontSize="16"/>
                </VerticalStackLayout>
                                     
          
            </Grid>
           
            <Frame BackgroundColor="White"
             CornerRadius="15"
             Padding="20"
	         WidthRequest="390"
             HasShadow="False"
             VerticalOptions="Start">

                <VerticalStackLayout Spacing="10">

                    <Entry Text="{Binding Description}" 
                        Placeholder="Description"
                        FontSize="18"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        BackgroundColor="#F0F0F0"/>
                </VerticalStackLayout>
            </Frame>


            <Button Text="save Activity"
                Command="{Binding AddActivityCommand}"
                FontSize="18"
                TextColor="White"
                BackgroundColor="MediumPurple"
                CornerRadius="15"
                HorizontalOptions="Fill" />

            <Button Text="Start Tracking Automatically"
             Command="{Binding StartTrackingCommand}"
             BackgroundColor="DarkViolet"
            TextColor="White"
            CornerRadius="10" />
            <Button Text="Stop Tracking"
             Command="{Binding StopTrackingCommand}"
            BackgroundColor="Gray"
            TextColor="White"
            CornerRadius="10" />

        </VerticalStackLayout>
    </ScrollView>







</ContentPage>


