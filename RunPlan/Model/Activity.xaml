<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model ="clr-namespace:RunPlan.Data"
             xmlns:viewmodel ="clr-namespace:RunPlan.ViewModel"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
              ios:Page.UseSafeArea="True"
             x:DataType="viewmodel:ActivityViewModel"
             x:Class="RunPlan.Model.Activity"
             BackgroundColor="#8260DA">
             
             

    <ScrollView>
        <VerticalStackLayout Padding="50" Spacing="30">

            <!-- ðŸŸ£ Add New Activity Form -->
            <Border BackgroundColor="White"
                StrokeShape="RoundRectangle 20"
                Padding="15"
                Stroke="MediumPurple"
                HorizontalOptions="Fill">

                <VerticalStackLayout Spacing="12">
                    <Label Text="Add New Activity"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="MediumPurple"
                       HorizontalOptions="Center" />

                    <Entry Text="{Binding ActivityName}"
                       Placeholder="Activity name"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Entry Text="{Binding DistanceText}"
                       Placeholder="Distance (km)"
                       Keyboard="Numeric"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Entry Text="{Binding Time}"
                       Placeholder="Time (hh:mm:ss)"
                       Keyboard="Text"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Entry Text="{Binding Date}"
                       Placeholder="Date (yyyy-MM-dd)"
                       Keyboard="Text"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Button Text="Add Activity"
                        Command="{Binding AddActivityCommand}"
                        BackgroundColor="MediumPurple"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Border>

            <!-- Spacer -->
            <BoxView HeightRequest="20" BackgroundColor="Transparent"/>

            <!-- ðŸŸ£ Activity History -->
            <Label Text="Activity History"
               FontAttributes="Bold"
               FontSize="18"
               TextColor="White"
               HorizontalOptions="Start" />

            <CollectionView ItemsSource="{Binding RunningActivities}"
                        Margin="0,0,0,20"
                        SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:RunningActivity">
                        <Border StrokeShape="RoundRectangle 10"
                            Padding="10"
                            BackgroundColor="#4E3689"
                            Margin="0,6">
                            <Grid ColumnDefinitions="*,Auto"
                              RowDefinitions="Auto,Auto"
                              RowSpacing="4">
                                <StackLayout Grid.Column="0" Grid.RowSpan="2">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                                    <Label Text="{Binding Distance, StringFormat='Distance: {0} km'}" />
                                    <Label Text="{Binding Time, StringFormat='Time: {0}'}" />
                                    <Label Text="{Binding Date, StringFormat='Date: {0}'}" />
                                </StackLayout>

                                <Button Text="ðŸ—‘"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    BackgroundColor="Transparent"
                                    TextColor="Red"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ActivityViewModel}}, Path=DeleteActivityCommand}"
                                    CommandParameter="{Binding}"
                                    VerticalOptions="Start"
                                    FontSize="20" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>







</ContentPage>