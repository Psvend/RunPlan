<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model ="clr-namespace:RunPlan.Data"
             xmlns:viewmodel ="clr-namespace:RunPlan.ViewModel"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
              ios:Page.UseSafeArea="True"
             x:DataType="viewmodel:ActivityViewModel"
             x:Class="RunPlan.Model.Activity"
             BackgroundColor="#8260DA">
             
             

    <ScrollView>
        <VerticalStackLayout Padding="50" Spacing="30">
            <Button Text="Back"
         Clicked="OnBackClicked"
         BackgroundColor="Transparent"
         TextColor="White"
         HorizontalOptions="Start"
         FontSize="16"
         Padding="0,0,0,10"/>


            <!-- ðŸŸ£ Add New Activity Form -->
            <Border BackgroundColor="White"
                StrokeShape="RoundRectangle 20"
                Padding="15"
                Stroke="MediumPurple"
                HorizontalOptions="Fill">

                <VerticalStackLayout Spacing="12">
                   

                    <Label Text="Add New Activity"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="MediumPurple"
                       HorizontalOptions="Center" />

                    <Entry Text="{Binding ActivityName}"
                       Placeholder="Activity name"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Entry Text="{Binding DistanceText}"
                       Placeholder="Distance (km)"
                       Keyboard="Numeric"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Entry Text="{Binding Time}"
                       Placeholder="Time (hh:mm:ss)"
                       Keyboard="Text"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Entry Text="{Binding Date}"
                       Placeholder="Date (yyyy-MM-dd)"
                       Keyboard="Text"
                       BackgroundColor="#F0F0F0"
                       TextColor="Black" />

                    <Button Text="Add Activity"
                        Command="{Binding AddActivityCommand}"
                        BackgroundColor="MediumPurple"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Border>

            <!-- Spacer -->
            <BoxView HeightRequest="20" BackgroundColor="Transparent"/>

            

        </VerticalStackLayout>
    </ScrollView>







</ContentPage>